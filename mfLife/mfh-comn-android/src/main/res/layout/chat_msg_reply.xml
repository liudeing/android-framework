<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp"
    android:background="#eeeeee">

    <!---提醒时间-->
    <TextView
        android:text=""
        style="@style/ChatMsgTipsStyle"
        android:gravity="center"
        android:id="@+id/ms_chat_time"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/ChatMsgReplyBodyStyle">

            <TextView
                android:text=""
                style="@style/ChatMsgUserName"
                android:id="@+id/ms_myReplyTime"
                android:visibility="gone" />

            <FrameLayout
                style="@style/ChatMsgReplyContainerStyle"
                android:id="@+id/ms_msgOuterFrame">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left|center"
                    android:minHeight="30dp"
                    android:lineSpacingExtra="2dp"
                    android:id="@+id/ms_myReplyMsg" />
            </FrameLayout>
        </LinearLayout>

        <com.mfh.comna.view.img.FineImgView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/ms_myHeadImage" />

    </LinearLayout>
</LinearLayout>